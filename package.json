    "globals": "^17.3.0",
    "html-webpack-plugin": "^5.6.6",
    "mini-css-extract-plugin": "^2.10.0",
    "prettier": "^3.8.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "webpack": "^5.105.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3"
