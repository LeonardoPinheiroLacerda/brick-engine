{
  "name": "@leonardopinheirolacerda/brick-engine",
  "version": "0.0.8",
  "description": "A lightweight brick engine built with p5.js and TypeScript",
  "type": "commonjs",
  "main": "dist/brick-engine.js",
  "types": "dist/index.d.ts",
  "license": "ISC",
