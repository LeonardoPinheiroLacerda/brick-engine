{
  "name": "brick-engine-js",
  "version": "0.0.1",
  "description": "A lightweight brick engine built with p5.js and TypeScript",
  "type": "commonjs",
  "main": "dist/brick-engine.js",
  "types": "dist/index.d.ts",
  "license": "ISC",
  "author": "LeonardoPinheiroLacerda",
  "scripts": {
    "start": "webpack serve --open",
    "build": "webpack --mode production && npm run docs:build",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "eslint .",
    "format": "npx prettier -w .",
    "format:check": "npx prettier -c .",
    "docs:diagram": "./scripts/generate-diagrams.sh",
    "docs:build": "node ./scripts/generate-docs.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build && npm run build:types"
  },
  "dependencies": {
    "colord": "^2.9.3",
    "p5": "^2.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/p5": "^1.7.7",
    "@types/webpack-env": "^1.18.8",
    "@vitest/coverage-v8": "^4.0.18",
    "asciidoctor": "^3.0.4",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.3",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "html-webpack-plugin": "^5.6.6",
    "jsdom": "^28.1.0",
    "mini-css-extract-plugin": "^2.10.0",
    "prettier": "^3.8.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18",
    "webpack": "^5.105.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3"
  },
  "overrides": {
    "minimatch": "^10.2.1"
  }
}
