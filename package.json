{
  "name": "brick-engine",
  "version": "0.0.1-snapshot",
  "description": "A lightweight brick engine built with p5.js and TypeScript",
  "private": true,
  "type": "commonjs",
  "main": "dist/brick-engine.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/brick-engine.js"
    }
  },
  "license": "ISC",
  "author": "LeonardoPinheiroLacerda",
  "scripts": {
    "start": "webpack serve --open",
    "build": "webpack --mode production",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "eslint .",
    "docs:diagram": "./scripts/generate-diagrams.sh",
    "format": "npx prettier -w .",
    "check-format": "npx prettier -c ."
  },
  "dependencies": {
    "colord": "^2.9.3",
    "p5": "^2.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/p5": "^1.7.7",
    "@types/webpack-env": "^1.18.8",
    "css-loader": "^7.1.3",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "html-webpack-plugin": "^5.6.6",
    "mini-css-extract-plugin": "^2.10.0",
    "prettier": "^3.8.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "webpack": "^5.105.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3"
  }
